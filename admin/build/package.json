{
  "name": "jekyll-admin-site",
  "version": "1.0.0",
  "description": "Jekyll 블로그를 위한 클라이언트 사이드 어드민 인터페이스",
  "main": "assets/js/main.js",
  "scripts": {
    "build": "node build/optimize.js",
    "build:dev": "npm run build -- --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "playwright test",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:css": "stylelint assets/css/**/*.css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "format": "prettier --write assets/**/*.{js,css}",
    "serve": "http-server . -p 8080 -c-1",
    "dev": "concurrently \"npm run serve\" \"npm run test:watch\"",
    "analyze": "npm run build && bundlesize",
    "lighthouse": "lhci autorun",
    "deploy": "npm run build && npm run test && npm run lighthouse",
    "clean": "rimraf dist coverage .nyc_output",
    "precommit": "lint-staged"
  },
  "keywords": [
    "jekyll",
    "admin",
    "cms",
    "blog",
    "markdown",
    "github-pages"
  ],
  "author": "Jekyll Admin Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/jekyll-admin-site.git"
  },
  "bugs": {
    "url": "https://github.com/username/jekyll-admin-site/issues"
  },
  "homepage": "https://username.github.io/jekyll-admin-site/admin/",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@lhci/cli": "^0.12.0",
    "bundlesize": "^0.18.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "dependencies": {
    "marked": "^9.1.0",
    "js-yaml": "^4.1.0"
  },
  "bundlesize": [
    {
      "path": "dist/assets/js/bundle.*.js",
      "maxSize": "100 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/css/admin.*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.test.js",
      "!assets/js/bundle.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/unit/**/*.test.js",
      "**/tests/integration/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "globals": {
      "marked": "readonly",
      "jsyaml": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "stylelint": {
    "extends": ["stylelint-config-standard"],
    "rules": {
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "declaration-block-trailing-semicolon": "always",
      "indentation": 2,
      "max-empty-lines": 2,
      "rule-empty-line-before": [
        "always",
        {
          "except": ["first-nested"],
          "ignore": ["after-comment"]
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.css": ["stylelint --fix", "prettier --write"],
    "*.{md,json,yml,yaml}": ["prettier --write"]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}